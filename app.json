{
  "id": "com.swttt.devicegroups",
  "sdk": 2,
  "permissions": [
    "homey:manager:api"
  ],
  "name": {
    "en": "HomeyGroups"
  },
  "description": {
    "en": "Makes it possible to group devices and switch all devices within a group."
  },
  "category": "tools",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Bas Jansen",
    "email": "bas@balotti.com"
  },
  "drivers": [{
    "id": "devicegroup",
    "class": "other",
    "capabilities": [],
    "name": {
      "en": "Device group"
    },
    "pair": [{
        "id": "class"
      },
      {
        "id": "capabilities",
        "navigation": {
          "next": "devices",
          "prev": "class"
        }
      },
      {
        "id": "devices",
        "navigation": {
          "next": "done",
          "prev": "capabilities"
        }
      },
      {
        "id": "done",
        "navigation": {
          "prev": "capabilities"
        }
      }
    ]
  }]
}
